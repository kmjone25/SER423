<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kmjone25.bsse.asu.edu.placedescriptiondroid.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editName"
            android:text="Name"
            android:layout_below="@+id/editLat"
            android:layout_alignParentStart="true"
            android:inputType="text" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Decription"
            android:ems="10"
            android:id="@+id/editDscrpt"
            android:layout_below="@+id/editName"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:ems="10"
            android:id="@+id/editCat"
            android:layout_below="@+id/editDscrpt"
            android:layout_alignParentStart="true"
            android:inputType="text" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Address Title"
            android:ems="10"
            android:id="@+id/editAddressT"
            android:layout_below="@+id/editCat"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Address Description"
            android:ems="10"
            android:id="@+id/editAddressD"
            android:layout_below="@+id/editAddressT"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:text="Elevation"
            android:ems="10"
            android:id="@+id/editElev"
            android:layout_below="@+id/editAddressD"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Latitude"
            android:ems="10"
            android:id="@+id/editLat"
            android:layout_below="@+id/editLong"
            android:layout_alignParentStart="true"
            android:inputType="numberDecimal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Longitude"
            android:ems="10"
            android:id="@+id/editLong"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:inputType="numberDecimal" />

        <Button
            android:text="Submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="buttonClicked"
            android:id="@+id/subButton" />
    </LinearLayout>

    <TextView
        android:text="Output"
        android:layout_width="match_parent"
        android:id="@+id/Output"
        android:layout_height="400px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
